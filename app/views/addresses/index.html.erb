<div class="basic-grey">
<p id="notice"><%= notice %></p>

<h1>Endereços</h1>

<table>
  <thead>
    <tr>
      <th>Rua</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Contato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.contact.name %></td>
        <td><%= link_to 'Ver', address %></td>
        <td><%= link_to 'Editar', edit_address_path(address) %></td>
        <td><%= link_to 'Excluir', address, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo endereço', new_address_path, class:"button" %>
<%= link_to 'Tela incial', home_index_path, class:"button" %>
</div>