<%= form_with(model: phone, html: { class: "basic-grey" }) do |form| %>
  <% if phone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(phone.errors.count, "error") %> prohibited this phone from being saved:</h2>

      <ul>
        <% phone.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Phone %>
    <%= form.text_field :Phone %>
  </div>

  <div class="field">
    <%= form.label :contact_id %>
    <%= collection_select(:phone, :contact_id, @contact_options_for_select, :id, :name)%>
  </div>

  <div class="actions">
    <%= form.submit "Enviar", class:"button" %>
    <%= link_to 'Voltar', phones_path, class:"button" %>
  </div>
<% end %>
