<div class="basic-grey">
<p id="notice"><%= notice %></p>

<h1>Phones</h1>

<table>
  <thead>
    <tr>
      <th>Phone</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.Phone %></td>
        <td><%= phone.contact.name %></td>
        <td><%= link_to 'Ver', phone %></td>
        <td><%= link_to 'Editar', edit_phone_path(phone) %></td>
        <td><%= link_to 'Excluir', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo telefone', new_phone_path, class:"button" %>
<%= link_to 'Voltar', home_index_path, class:"button"%>
</div>