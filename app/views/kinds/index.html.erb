<div class="basic-grey">
<p id="notice"><%= notice %></p>

<h1>Kinds</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= link_to 'Ver', kind %></td>
        <td><%= link_to 'Editar', edit_kind_path(kind) %></td>
        <td><%= link_to 'Excluir', kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo tipo', new_kind_path, class:"button" %>
<%= link_to 'Tela inicial', home_index_path, class:"button" %>
</div>