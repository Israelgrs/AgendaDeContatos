<div class="basic-grey">
<p id="notice"><%= notice %></p>

<h1>Contatos</h1>

<table>
  <thead>
    <tr>
      <th><%= Contact.human_attribute_name("name") %></th>
      <th><%= Contact.human_attribute_name("kind") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr style="background: <%= cycle('white', '#f0F0f5')%>">
        <td><%= contact.name %></td>
        <td><%= contact.kind.description %></td>
        <td><%= link_to 'Ver', contact %></td>
        <td><%= link_to 'Editar', edit_contact_path(contact) %></td>
        <td><%= link_to 'Excluir', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
  <%= paginate @contacts, window: 2 %>
<div>
<br>
<br>

<%= link_to 'Novo contato', new_contact_path, class:"button" %>
<%= link_to 'Tela inicial', home_index_path, class:"button"%>
</div>