<%= form_with(model: @contact, html: { class: "basic-grey"}) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :kind_id %>
    <%= collection_select(:contact, :kind_id, @kind_options_for_select, :id, :description)%>
  </div>

  <%= form.fields_for :address do |address_fields| %>
    <div class="field">
      <%= form.label :street %>
      <%= address_fields.text_field :street%>
    </div>
    <div class="field">
      <%= form.label :city %>
      <%= address_fields.text_field :city %>
    <div>
      <div class="field">
        <%= form.label :state %>
        <%= address_fields.select :state, options_for_select([["Bahia", "BA"], ["SÃ£o Paulo", "SP"], ["Rio de Janeiro", "RJ"], ["Distrito Federal", "DF"]], @contact.address.state )%>
      <div>
    <%end%>

  <div id="phones">
    <%= form.fields_for :phones do |phones_fields| %>
      <%= render "phone_fields", :form => phones_fields %>
    <%end%>

    <%= link_to_add_association('[Adicionar Telefone]', form, :phones, form_name: 'form', partial: 'phone_fields') %>
  </div>

  <div class="field">
    <%= form.label :rmk %>
    <%= form.text_area :rmk %>
  </div>

  <div class="actions">
    <%= form.submit "Enviar", class:"button" %>
    <%= link_to 'Back', contacts_path, class:"button" %>
  </div>
<% end %>
